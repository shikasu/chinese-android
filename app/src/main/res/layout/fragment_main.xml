<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    app:rowCount="4"
    app:columnCount="3"
    android:id="@+id/gridLayout"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivityFragment">

    <com.shikasu.playtime.PlayItem
        app:layout_row="0"
        app:layout_column="0"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/PlayItem"
        android:text="00 this text is long..."
        android:id="@+id/i00"
        />

    <com.shikasu.playtime.PlayItem
        app:layout_row="0"
        app:layout_column="1"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/PlayItem"
        android:text="01"
        android:id="@+id/i01"
        />

    <com.shikasu.playtime.PlayItem
        app:layout_row="0"
        app:layout_column="2"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/PlayItem"
        android:text="02"
        android:id="@+id/i02"
        />

    <com.shikasu.playtime.PlayItem
        app:layout_row="1"
        app:layout_column="0"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/PlayItem"
        android:text="10"
        android:id="@+id/i10"
        />

    <com.shikasu.playtime.PlayItem
        app:layout_row="1"
        app:layout_column="1"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/PlayItem"
        android:text="11"
        android:id="@+id/i11"
        />

    <com.shikasu.playtime.PlayItem
        app:layout_row="1"
        app:layout_column="2"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/PlayItem"
        android:text="12"
        android:id="@+id/i12"
        />

    <com.shikasu.playtime.PlayItem
        app:layout_row="2"
        app:layout_column="0"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/PlayItem"
        android:text="20"
        android:id="@+id/i20"
        />

    <com.shikasu.playtime.PlayItem
        app:layout_row="2"
        app:layout_column="1"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/PlayItem"
        android:text="21"
        android:id="@+id/i21"
        />

    <com.shikasu.playtime.PlayItem
        app:layout_row="2"
        app:layout_column="2"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/PlayItem"
        android:text="22"
        android:id="@+id/i22"
        />

    <com.shikasu.playtime.PlayItem
        app:layout_row="3"
        app:layout_column="0"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/PlayItem"
        android:text="30"
        android:id="@+id/i30"
        />

    <com.shikasu.playtime.PlayItem
        app:layout_row="3"
        app:layout_column="1"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/PlayItem"
        android:text="31"
        android:id="@+id/i31"
        />

    <com.shikasu.playtime.PlayItem
        app:layout_row="3"
        app:layout_column="2"
        app:layout_gravity="fill"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        style="@style/PlayItem"
        android:text="32"
        android:id="@+id/i32"
        />

</android.support.v7.widget.GridLayout>
